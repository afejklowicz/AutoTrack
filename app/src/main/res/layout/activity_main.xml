<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car_bg"
    tools:context="com.bignerdranch.android.myapplication.MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:alpha=".8"
        android:background="@android:color/black"
        android:textAlignment="center"/>

        <Button
            android:id="@+id/add_vehicle"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="@drawable/button_effect"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/add_service_rec"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/add_vehicle"
            android:layout_below="@+id/add_vehicle"
            android:layout_marginTop="12dp"
            android:background="@drawable/service_button_effect"/>

        <Button
            android:id="@+id/add_fill_up"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fill_up_button_effect"
            android:layout_below="@+id/add_service_rec"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/view_rec"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/add_fill_up"
            android:layout_below="@+id/add_fill_up"
            android:layout_marginTop="11dp"
            android:background="@drawable/serv_rec_effect"/>

        <Button
            android:id="@+id/view_spend"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/spend_effect"
            android:layout_below="@+id/view_rec"
            android:layout_alignStart="@+id/view_rec"
            android:layout_marginTop="13dp"/>

</RelativeLayout>
